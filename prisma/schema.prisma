generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//--PrismaDB database scheme--
//if you make changes to this file, you have to execute
//       npx prisma db push
//to reload Prisma client and apply changes
//WARNING : data can be lost during the process

model Link {
  id         Int      @id @default(autoincrement())
  createdAt  DateTime @default(now())
  title      String   @db.VarChar(255)
  blockchain Chains   @relation(fields: [chainId], references: [id])
  chainId    Int
  link       String   @db.VarChar(255)
  verified   Boolean  @default(false)
}

model Chains {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  title     String   @db.VarChar(255)
  links     Link[]
}
